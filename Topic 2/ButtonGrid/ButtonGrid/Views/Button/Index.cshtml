@model IEnumerable<ButtonGrid.Models.ButtonModel>

    <style>
        .game-button{
            width: 85px;
            border:none;
        }
        .game-button-image{
            width: 70px;
        }
        .button-zone{
            display:flex;
            flex-wrap:wrap;
        }
        .line-break{
            flex-basis:100%;
            height:0;
        }
        .button-label{
            font-size:12px;
            text-align:center;
        }
    </style>

@{
    string[] imageNames = { "blue-button.png", "red-button.png", "green-button.png", "yellow-button.png" };
}

<form>
    <div class="button-zone">
        @for(int i = 0; i < Model.Count(); i++){
           
            @if(@i % 5 == 0)
            {
                <div class="line-break"></div>
            }
            <button class="game-button" type="submit" value="@Model.ElementAt(i).Id" name="buttonNumber" asp-controller="Button" asp-action="HandleButtonClick">
                <img class="game-button-image" src="~/img/@imageNames[Model.ElementAt(i).ButtonState]"/>
                <div class="button-label">
                    @Model.ElementAt(i).Id
                    ,
                    @Model.ElementAt(i).ButtonState
                </div>
            </button>
        }
     </div>
</form>

}