@model Act_2.Models.ProductModel

@{
     var s = @Model.Name;
     var firstWord = s.IndexOf(" ") > -1 ? s.Substring(0, s.IndexOf(" ")) : s;
}
<div class="card" id="card-number-@Model.Id"  style="width: 18rem; margin:5px;">   
    <img class="card-img-top" src="https://loremflickr.com/160/120/@firstWord?lock=@Model.Id" atl="Card image cap">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>

        <p class="card-text"> @Html.DisplayFor(modelItem => Model.Price)</p>
        <a href="/products/ShowOneProduct/@Model.Id" class="btn btn-primary">Show Details</a>
        <a href="/products/ShowEditForm/@Model.Id" class="btn btn-warning">Edit</a>
        <a href="/products/DeleteItem/@Model.Id" class="btn btn-warning">Delete</a>

        <button type="button" class="btn btn-primary edit-product-button" value="@Model.Id" data-bs-toggle="modal" data-bs-target="#editForm">
            Launch demo modal
        </button>
    </div>
</div>